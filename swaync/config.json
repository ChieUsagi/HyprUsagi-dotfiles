{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "cssPriority": "user",

  "control-center-width": 500,
  "control-center-height": 600,
  "control-center-margin-top": 6,
  "control-center-margin-bottom": 6,
  "control-center-margin-right": 6,
  "control-center-margin-left": 0,

  "notification-window-width": 500,
  "notification-icon-size": 36,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,

  "timeout": 10,
  "timeout-low": 5,
  "timeout-critical": 0,

  "fit-to-screen": true,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "scripts": {},
  "notification-visibility": {
    "example-name": {
      "state": "muted",
      "urgency": "Low",
      "app-name": "Spotify"
    }
  },
  "widgets": [
    "menubar",
    "buttons-grid",
    "volume",
    "mpris",
    "dnd",
    "title",
    "notifications"
  ],
  "widget-config": {
    "menubar": {
      "menu#power-buttons": {
        "label": "", 
        "position": "right",
        "actions": [ 
          {
            "label": "  Reiniciar",
            "command": "systemctl reboot"
          },
          {
            "label": "  Bloquear",
            "command": "loginctl lock-session"
          },
          {
            "label": "󰤄  Suspender",
            "command": "systemctl suspend"
          },
          {
            "label": "  Apagar",
            "command": "systemctl poweroff"
          }
        ]
      },
      "menu#screenshot-buttons": {
        "label": "󰹑",
        "position": "left",
        "actions": [
          {
            "label": "  Pantalla completa",
            "command": "XDG_CURRENT_DESKTOP=sway flameshot full"
          },
          {
            "label": "󰩭  Seleccion",
            "command": "XDG_CURRENT_DESKTOP=sway flameshot gui"
          },
          {
            "label": "󰉋  Capturas de patalla",
            "command": "nautilus /home/chie/Imágenes"
          },
          {
            "label": "  Configuracion",
            "command": "XDG_CURRENT_DESKTOP=sway flameshot config"
          }
        ]
      },
      "menu#powermode-buttons": {
        "label": "󰚥", 
        "position": "left",
        "actions": [ 
          {
            "label": "  Rendimiento",
            "command": "powerprofilesctl set performance"
          },
          {
            "label": "  Balanceado",
            "command": "powerprofilesctl set balanced"
          },
          {
            "label": "  Ahorro de energia",
            "command": "powerprofilesctl set power-saver"
          }
        ]
      }
    },
    "buttons-grid": {
      "buttons-per-row": 3,
      "actions": [
        {
          "label": "󰉋",
          "command": "nautilus"
        },
        {
          "label": "",
          "command": "kitty ~"
        },
        {
          "label": "󰽟",
          "command": "pavucontrol"
        },
        {
          "label": "",
          "type": "toggle",
          "command": "swayosd-client --output-volume mute-toggle"
        },
        {
          "label": "",
          "type": "toggle",
          "command": "swayosd-client --input-volume mute-toggle"
        }
      ]
    },
    "volume": {
      "label": " ",
      "expand-button-label": "",
      "collapse-button-label": "",
      "show-per-app": true,
      "show-per-app-icon": true,
      "show-per-app-label": false
    },
    "mpris": {
      "image-size": 96,
      "image-radius": 6
    },
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": "Clear All"
    },
    "dnd": {
      "text": "No molestar"
    },
    "notifications": {
      "vexpand": true
    }
  }
}
